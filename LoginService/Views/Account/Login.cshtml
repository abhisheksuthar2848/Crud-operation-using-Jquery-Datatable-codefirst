<body class="vertical-layout page-header-light vertical-menu-collapsible vertical-dark-menu preload-transitions 1-column register-bg   blank-page blank-page" data-open="click" data-menu="vertical-dark-menu" data-col="1-column">
    <div class="row">
        <div class="col s12">
            <div class="container">
                <div id="register-page" class="row">
                    <div class="col s12 m6 l4 z-depth-4 card-panel border-radius-6 register-card bg-opacity-8">
                        @*<form class="login-form">*@
                            <div class="row">
                                <div class="input-field col s12">
                                    <h5 class="ml-4">Login</h5>
                                    <p class="ml-4">Sign in now !</p>
                                </div>
                            </div>

                            <div class="row margin">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix pt-2">mail_outline</i>
                                    <input id="Email" type="email">
                                    <label for="Email">Email</label>
                                </div>
                            </div>
                            <div class="row margin">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix pt-2">lock_outline</i>
                                    <input id="Password" type="password">
                                    <label for="Password">Password</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col s12">
                                    <button class="btn waves-effect waves-light border-round gradient-45deg-purple-deep-orange col s12" id="BtnLogin">Login</button>

                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">

                                    <p class="margin medium-small"><a href="/Account/Register"> New Register</a></p>
                                    <p class="margin medium-small"><a href="/Account/ForgotPassword"> Forget Password</a></p>
                                </div>
                            </div>
                        @*</form>*@
                    </div>
                </div>
            </div>
            <div class="content-overlay"></div>
        </div>
    </div>
    <script>
        $(document).ready(function () {

            $("#BtnLogin").click(function () {
                debugger

                var email = $("#Email").val();
                var password = $("#Password").val();
                var Logindata = { Email: email, Password: password };

                //var model =
                //{
                //    Email: email,
                //};
                $.ajax({

                    type: 'Post',
                    url: '/Account/Login',
                    data: { model: Logindata, returnUrl: "/home/index" },
                    success: function (data) {
                       
                        debugger
                        if (data.success == true) {
                            //alert("inside condition");
                            //debugger
                            window.location.href = 'http://localhost:59766/home/index';

                        }
                       

                    },
                    error: function (err) {
                        debugger
                        alert(err);
                    }
                });


            });
        });
    </script>


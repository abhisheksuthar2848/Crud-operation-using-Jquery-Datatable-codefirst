
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_template.cshtml";
}


<style>
    .select-wrapper select {
        display: none !important;
    }

    .dataTables_wrapper {
        max-width: 100%;
        overflow-x: auto;
    }

    div#userTable_length select {
        display: inline-block;
        height: 30px;
        width: 67px;
    }

    div#userTable_filter {
        margin-right: 16px;
    }

    .dataTables_length, .dataTables_filter {
        display: block !important;
    }


    .model-overflow {
        overflow-y: visible !important;
    }

    .modal.datepicker-modal.open {
        width: 100%;
    }
</style>

<!-- Add modeel start-->
<!-- Modal Trigger -->
<a class="waves-effect waves-light btn modal-trigger" href="#modal1">Add</a>
<!-- Modal Structure -->
<div id="modal1" class="modal modal-fixed-footer">

    <div class="modal-content">

        <div id="validation">

            <h4 class="card-title">Add Store</h4>
            <form>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">account_circle</i>
                        <input id="name1" type="text" class="validate">
                        <input id="storeId1" type="hidden">
                        <label for="name1">Name</label>
                    </div>

                    
                </div>
                
            </form>
        </div>
        <!-- Form with validation -->
    </div>
    <div class="modal-footer">
        <button class="btn cyan waves-effect waves-light right" id="btnSubmit" type="submit" name="action">
            Submit
            <i class="material-icons right">send</i>
        </button>
        <button class="btn cyan waves-effect waves-light right" id="btnUpdate" type="submit" name="action">
            Update
            <i class="material-icons right">send</i>
        </button>
        <button type="button" class="btn btn-light" id="btncanclecard">Cancel</button>
    </div>

</div>


<!--End Add modeel -->
<!--  Start Display-->
<div class="users-list-table">
    <div class="card">
        <div class="card-content">
            <!-- datatable start -->
            <div class="responsive-table">
                <table id="userTable" class="table">
                    <thead>
                        <tr>


                            <th>StoreName</th>
                           
                            <th>Action</th>
                           
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <!-- datatable ends -->
        </div>
    </div>
</div>
<!--  End Display-->
<script>
    $(document).ready(function () {
        //debugger
        $('.modal').modal();
       // GetCreatedBy();
        GetDataTableData();
        $("#btnUpdate").hide();
    });
    $(document).on("click", "#btncanclecard", function () {
        
        $('#modal1').modal('close');
    });
    $(document).on("click", "#btnSubmit", function () {
        debugger

        var fileData = new FormData();
        fileData.append("StoreName", $("#name1").val());
       

        $.ajax({
            type: 'post',
            url: '/Store/insert',
            data: fileData,
            contentType: false,
            processData: false,
            success: function (data) {
                alert("success");
                GetDataTableData()

            },
            error: function (err) {
                alert(err);
            }
        });

        clear()
        $('#modal1').modal('close');

    });

    function clear() {
        $("#name1").val("")
       

    }

    function GetDataTableData() {
        //debugger

        $("#userTable").DataTable({
            "processing": true,
            "serverSide": true,
            "filter": true,
            "orderMulti": false,
            "destroy": true,
            "ordering": true,
            "ajax": {
                "url": '/Store/GetTableData',
                "type": "post",

                "datatype": "json"
            },
            "columns": [

                {
                    "data": "StoreName",
                    "autoWidth": true,
                    "searchable": true
                },

                {
                    data: "notes",
                    searchable: false,
                    sortable:false,
                    render: function (data, type, row) {

                        return '<td><a onclick="GetDataByID(' + row.StoreId + ')"><i class="material-icons">edit</i></a></td><td><a onclick=""><i class="material-icons">remove_red_eye</i></a></td><td><a onclick="Delete(' + row.StoreId +')"><i class="material-icons">delete</i></a></td>';
                    }

                }
            ]


        });
    }

    function GetDataByID(StoreId) {
        $('#modal1').modal('open');
        $('#modal1 label').addClass("active")

        //debugger
        $("#btnUpdate").show();
        $("#btnSubmit").hide();

        $.ajax({
            url: '/Store/GetById/' + StoreId,
            type: 'get',
            dataType: 'json',
            success: function (data) {

                $("#name1").val(data.StoreName);
              
                $("#storeId1").val(data.StoreId);

            },
            error: function (data) {
                alert(data);
            }
        });
    }

    $(document).on("click", "#btnUpdate", function () {
        debugger

        var fileData = new FormData();
        fileData.append("StoreName", $("#name1").val());
       
        fileData.append("StoreId", $("#storeId1").val());



        $.ajax({
            url: '/Store/Update',
            type: 'post',
            data: fileData,

            contentType: false,
            processData: false,
            success: function (data) {
                debugger
                alert(data);
                clear();
                GetDataTableData();
            },
            error: function (err) {
                debugger
                alert(err);
            }


        });

    });


    function Delete(id) {
        debugger

        swal({
            title: "Are you sure?",
            text: "You will not be able to recover this imaginary file!",
            icon: 'warning',
            buttons: {
                cancel: true,
                delete: 'Yes, Delete It'
            }
        }).then(function (willDelete) {
            if (willDelete) {
                $.ajax({
                    url: '/Store/Delete/' + id,
                    type: 'post',
                    datatype: 'json',
                    success: function (data) {
                        //alert(data);
                        GetDataTableData();
                    },
                    error: function (err) {
                        alert(err);
                    }
                });
            } else {
                swal("Your Store is safe", {
                    title: 'Cancelled',
                    icon: "error",
                });
            }
        });






    }


  

</script>